generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

model Concept {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  thumbnail String @default("https://via.placeholder.com/150")
  description String
  price    Float
  likes    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}